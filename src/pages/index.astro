---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import plantillasData from "../data/plantillas.json";

// Definimos las secciones para que el bucle sepa qué filtrar
const secciones = [
  {
    id: 1,
    nombre: "Negocios y Facturación",
    slug: "negocios",
    color: "bg-primary",
    desc: "Optimiza la contabilidad de tu empresa y la gestión con tus clientes utilizando nuestros formatos preconfigurados.",
  },
  {
    id: 2,
    nombre: "Currículums y Búsqueda de Empleo",
    slug: "curriculums",
    color: "bg-success",
    desc: "Consigue la entrevista que buscas. Diseños estructurados para destacar tus habilidades y experiencia.",
  },
  {
    id: 3,
    nombre: "Organización y Productividad",
    slug: "organizacion",
    color: "bg-warning",
    desc: "Gana control sobre tu tiempo libre y obligaciones. Recursos diseñados para la planificación familiar y escolar.",
  },
  {
    id: 4,
    nombre: "Finanzas Personales y Ahorro",
    slug: "finanzas",
    color: "bg-info",
    desc: "Herramientas financieras al alcance de todos. Monitorea cada céntimo que entra y sale de tu bolsillo.",
  },
];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Descargar Plantillas Gratis | Excel, Word y PDF Editables - Plantillas Pro
    </title>
    <ClientRouter />
    <meta
      name="description"
      content="Descarga cientos de plantillas gratis en Excel, Word y PDF. Formatos editables sin registro."
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .hero-section {
        background: url("/img/hero-bg.avif") center center / cover no-repeat;
        min-height: 450px;
        position: relative;
        display: flex;
        align-items: center;
      }

      [transition\:name^="img-"] {
        aspect-ratio: 16 / 9;
        width: 100%;
        height: auto;
        object-fit: cover;
        will-change: transform, opacity; /* Esto prepara a la tarjeta gráfica */
      }
      .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          135deg,
          rgba(13, 110, 253, 0.9) 0%,
          rgba(0, 0, 0, 0.8) 100%
        );
        z-index: 1;
      }
      .hero-content {
        position: relative;
        z-index: 2;
      }
      .card-hover {
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
        border: none !important;
      }
      .card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.15) !important;
      }
      .badge-format {
        font-size: 0.7rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
      }
      .img-wrapper {
        aspect-ratio: 16/9;
        overflow: hidden;
        border-radius: 8px;
      }
      .img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
      }
      .card-hover:hover .img-wrapper img {
        transform: scale(1.05);
      }

      .img-wrapper img {
        /* ... tu código anterior ... */
        contain: paint; /* Esto le dice al navegador que no pinte nada fuera de la caja de la imagen */
        backface-visibility: hidden; /* Evita parpadeos en animaciones 3D/hardware */
      }

      /* Optimización para que la transición no anime TODA la página, solo lo necesario */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.10s; /* Haz que el fundido de fondo sea casi instantáneo */
        animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      }

      .ver-mas{
        margin-top: 15px;
        margin-left: 5px;
      }
    </style>
 
  </head>
  <body class="bg-light">
    <Header />

    <div class="hero-section text-white text-center shadow-sm">
      <div class="hero-overlay"></div>
      <div class="container py-5 hero-content">
        <h1 class="display-3 fw-bolder mb-3 text-white">
          Plantillas Editables y Formatos Gratis
        </h1>
        <p class="lead mb-4 fw-normal mx-auto" style="max-width: 800px;">
          Ahorra tiempo y profesionaliza tu trabajo. Descarga modelos listos
          para usar en Microsoft Excel, Word y documentos PDF.
        </p>
        <div class="mx-auto" style="max-width: 600px;">
          <div
            class="input-group input-group-lg shadow-lg rounded-3 overflow-hidden"
          >
            <input
              type="text"
              class="form-control border-0 px-4"
              placeholder="¿Qué plantilla buscas hoy?"
            />
            <button class="btn btn-warning px-4 fw-bold text-dark" type="button"
              >Buscar</button
            >
          </div>
        </div>
      </div>
    </div>

    <div class="container py-5 mt-4">
      {
        secciones.map((sec) => (
          <div class="mb-5 pb-5">
            <div class="d-flex align-items-center mb-3">
              <span
                class={`${sec.color} text-white fs-4 fw-bold rounded-circle d-flex justify-content-center align-items-center me-3`}
                style="width: 50px; height: 50px;"
              >
                {sec.id}
              </span>
              <h2 class="display-6 fw-bold text-dark mb-0">{sec.nombre}</h2>
              <a
                href={`/${sec.slug}`}
                class="ver-mas text-decoration-none fw-semibold d-flex align-items-center"
              >
                Ver todas
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  fill="currentColor"
                  class="bi bi-arrow-right-short ms-1 transition-icon"
                  viewBox="0 0 16 16"
                >
                  <path
                    fill-rule="evenodd"
                    d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"
                  />
                </svg>
              </a>
            </div>
            <p class="text-muted fs-5 mb-4 col-lg-8">{sec.desc}</p>

            <div class="row g-4">
              {plantillasData
                .filter((p) => p.categoria === sec.slug)
                .slice(0, 4) // Mostramos solo las 4 primeras de cada categoría en el Home
                .map((plantilla) => (
                  <div class="col-md-6 col-xl-3">
                    <div class="card h-100 shadow-sm rounded-4 p-2 card-hover bg-white">
                      <div class="card-body d-flex flex-column text-start">
                        <a
                          href={`/plantillas/${plantilla.id}`}
                          class="text-decoration-none mb-3"
                          data-astro-prefetch="false"
                        >
                          <div class="img-wrapper">
                            <img
                              transition:name={`img-${plantilla.id}`}
                              src={plantilla.imagen}
                              alt={plantilla.titulo}
                              loading={
                                plantilla.categoria === "negocios"
                                  ? "eager"
                                  : "lazy"
                              }
                              decoding="async"
                            />
                          </div>
                        </a>

                        <span
                          class={`badge ${plantilla.etiqueta} rounded-pill align-self-start mb-3 badge-format`}
                        >
                          {plantilla.formato}
                        </span>

                        <h4 class="card-title text-dark fs-5 fw-bold mb-2">
                          <a
                            href={`/plantillas/${plantilla.id}`}
                            class="text-dark text-decoration-none"
                          >
                            {plantilla.titulo}
                          </a>
                        </h4>

                        <p class="card-text text-muted mb-4 small flex-grow-1">
                          {plantilla.descripcion}
                        </p>

                        <a
                          href={`/plantillas/${plantilla.id}`}
                          class="btn btn-outline-dark w-100 fw-bold rounded-3 py-2"
                        >
                          Descargar Gratis
                        </a>
                      </div>
                    </div>
                  </div>
                ))}
            </div>
          </div>
        ))
      }
    </div>

    <Footer />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script is:inline>
      document.addEventListener("astro:before-preparation", () => {
        // Esto suaviza la carga interna antes de que empiece la animación
        window.scrollTo({ top: 0, behavior: "instant" });
      });
    </script>
  </body>
</html>
